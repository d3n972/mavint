        $(document).ready(_ => {
            $('select').select2({
                theme: 'bootstrap-5',
                width: '80%',
            });
            fetch('/public/assets/stations.json')
                .then(r => r.json())
                .then(data => {
                    data.stations.forEach(station => {
                        var newOption = new Option(station.name, Number.parseInt(station.code,10), false, false);
                        $('select').append(newOption).trigger('change');
                    })
                })
        })
    </script>
